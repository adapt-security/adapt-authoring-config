{
  "name": "adapt-authoring-config",
  "version": "0.0.1",
  "description": "A configuration module for the Adapt authoring tool.",
  "homepage": "https://github.com/taylortom/adapt-authoring-config",
  "main": "index.js",
  "adapt_authoring": {
    "module": true,
    "utility": "config",
    "documentation": {
      "enable": true,
      "includes": {
        "source": "lib/*",
        "docs": "docs/*"
      }
    },
    "testing": {
      "tests": "tests/*.spec.js"
    }
  },
  "dependencies": {
    "async": "3.1.0",
    "fs-extra": "7.0.0",
    "nconf": "0.10.0"
  },
  "peerDependencies": {
    "adapt-authoring-core": "git+https://github.com/taylortom/adapt-authoring-core.git"
  }
}
